# Environment Variables for Lead Generation Agent
# Copy this file to .env and fill in your credentials

# ==================== Required ====================
# OpenAI API Key - Required for LLM features
OPENAI_API_KEY=your-openai-api-key-here

# ==================== Optional ====================
# Apify Token - Required for LinkedIn/Google Maps scraping
APIFY_TOKEN=your-apify-token-here

# Google Maps API Key - Optional, for direct Google Places API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Serper API Key - Optional, for web search enrichment
SERPER_API_KEY=your-serper-api-key-here

# ==================== LLM Configuration ====================
# Default model for simple tasks
OPENAI_MODEL=gpt-4o-mini

# Advanced model for complex reasoning
OPENAI_MODEL_ADVANCED=gpt-4o

# ==================== Apify Actor IDs ====================
# Override default actors if needed
# APIFY_ACTOR_LINKEDIN_JOBS=apify/linkedin-jobs-scraper
# APIFY_ACTOR_GOOGLE_MAPS=apify/google-maps-scraper
# APIFY_ACTOR_WEBSITE=apify/web-scraper

# ==================== Processing Settings ====================
# Max leads per run
MAX_LEADS_PER_RUN=100

# Enable debug logging
DEBUG=false

# Storage type: memory, sqlite, json
STORAGE_TYPE=memory

# ==================== Rate Limiting ====================
# Timeout for Apify runs (seconds)
APIFY_DEFAULT_TIMEOUT=300

# Polling interval (seconds)
APIFY_POLL_INTERVAL=5
